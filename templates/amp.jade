doctype html
html(lang='en', amp='')
  head
    script(async='', src='https://cdn.ampproject.org/v0.js')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css')
    script(async='', custom-element='amp-analytics', src='https://cdn.ampproject.org/v0/amp-analytics-0.1.js')

    meta(charset='utf-8')
    title= page.title

    meta(name='viewport', content='width=device-width,minimum-scale=1,initial-scale=1')
    link(rel='canonical', href="#{locals.url}#{page.article.url}")

    //- Twitter card tags
    meta(name='twitter:card', content='summary')
    meta(name='twitter:site', content='michaelmior')

    - var imageObject = env.helpers.blogImageObject(page)

    //- OG meta tags
    meta(property='og:url', content="#{locals.url}#{page.article.url}")
    meta(property='og:title', content=page.title)
    meta(property='og:description', content=page.metadata.summary)
    meta(property='og:type', content='article')
    meta(property='og:site_name', content='Michael Mior')
    meta(property='og:image', content=imageObject.url)
    meta(property='og:image:width', content=imageObject.width)
    meta(property='og:image:height', content=imageObject.height)
    meta(property='fb:profile_id', content='227200130')
    meta(property='article:publisher', content='227200130')
    meta(property='article:author', content='227200130')
    meta(property='article:published_time', content=env.helpers.toISO8601(page.date))

    //- Schema.org markup
    script(type='application/ld+json')
      :json
        {
          "@context": "http://schema.org",
          "@type": "BlogPosting",
          "headline": "#{page.metadata.title}",
          "name": "#{page.metadata.title}",
          "datePublished": "#{env.helpers.toISO8601(page.date)}",
          "dateModified": "#{env.helpers.toISO8601(page.metadata.modified || page.date)}",
          "author": {
            "@type": "Person",
            "name": "Michael Mior"
          },
          "publisher": {
            "@type": "Organization",
            "name": "Michael Mior",
            "logo": {
              "@type": "ImageObject",
              "url": "#{locals.url}/img/logo-full.png",
              "width": 600,
              "height": 48
            }
          },
          "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "#{page.article.url}"
          },
          "image": {
            "@type": "ImageObject",
            "url": "#{imageObject.url}",
            "height": "#{imageObject.height}",
            "width": "#{imageObject.width}"
          }
        }

    meta(name='theme-color', content='#4080c0')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Montserrat:400|Hind:400,700,400italic|Roboto+Mono:400,700,400italic,700italic')

    //- AMP boilerplate
    | <style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style><noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>

    //- Custom styles
    style(amp-custom='')
      !='\n<!-- @@include ' + contents.styles['amp.scss'].url + '-->'

  body
    header
      a(href=locals.url)= 'Michael Mior'

    h1= page.title

    div#content
      div.content-wrap
        article.article
          section.content!= typogr(page.html).typogrify()
        div.share
          a(title='Share on Twitter', href="https://twitter.com/intent/tweet?source=#{encodeURIComponent(locals.url + page.article.url)}&text=#{encodeURIComponent(page.title + ' ' + locals.url + page.article.url)}&via=michaelmior", target='_blank')
            i.fa.fa-twitter-square(aria-hidden='true')
          a(title='Submit to Hacker News', href="https://news.ycombinator.com/submitlink?u=#{encodeURIComponent(locals.url + page.article.url)}&t=#{encodeURIComponent(page.title)}", target='_blank')
            i.fa.fa-hacker-news(aria-hidden='true')
          a(title='Submit to Reddit', href="http://www.reddit.com/r/programming/submit?url=#{encodeURIComponent(locals.url + page.article.url)}&title=#{encodeURIComponent(page.title)}", target='_blank')
            i.fa.fa-reddit-square(aria-hidden='true')
          a(title='Share on Google+', href="https://plus.google.com/share?url=#{encodeURIComponent(locals.url + page.article.url)}", target='_blank')
            i.fa.fa-google-plus-square(aria-hidden='true')
          a(title='Share on LinkedIn', href="https://www.linkedin.com/shareArticle?mini=true&url=#{encodeURIComponent(locals.url + page.article.url)}&title=#{encodeURIComponent(page.title)}&summary=#{encodeURIComponent(page.metadata.summary)}&source=#{encodeURIComponent(locals.url + page.article.url)}", target='_blank')
            i.fa.fa-linkedin-square(aria-hidden='true')
          a(title='Share on Facebook', href="https://www.facebook.com/sharer.php?u=#{encodeURIComponent(locals.url + page.article.url)}", target='_blank')
            i.fa.fa-facebook-square(aria-hidden='true')
        center
          a(href=page.article.url)= 'View comments'

    // AMP analytics
    | <amp-analytics type="googleanalytics" id="analytics1">
    |   <script type="application/json">
    |     { "vars": {"account": "UA-45085128-2"},
    |       "triggers": {"trackPageview": {"on": "visible","request": "pageview"}}}
    |   </script>
    | </amp-analytics>
