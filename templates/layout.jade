      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Montserrat:400|Hind:400,700,400italic')
      link(rel='stylesheet', href=contents.styles['main.scss'].url)
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url)= locals.name
    div#logo
      img(src=contents.img['logo.png'].url, alt='Logo')
    div#content
      div.content-wrap
        hr
        ul.menu
          li: a(href='/') Home
          li: a(href='/about/') About Me
          li: a(href='/contact/') Contact
          li: a(href='/blog/') Blog
          li: a(href='/publications/') Publications
          li: a(href='/projects/') Projects
        hr

        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
